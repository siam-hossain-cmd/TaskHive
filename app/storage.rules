rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to ai_analysis folder
    match /ai_analysis/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Task attachments - any authenticated user can read/write
    match /tasks/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Submissions
    match /submissions/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Profile images
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
